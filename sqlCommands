  INSERT INTO orders
  VALUES (001, 334455, 'finish', '20220417 1:34:09 PM');
  
  INSERT INTO users
  VALUES (001, 'Jumana', 'Jumana@hotmail.com','F', '1999','20220417 1:34:09 PM',966 );
  
