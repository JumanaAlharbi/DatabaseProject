CREATE DATABASE store;


-- --
  CREATE TABLE order_products (
  order_id int FOREIGN KEY REFERENCES orders(id),
  product_id int FOREIGN KEY REFERENCES products(id),
  quantity int DEFAULT 0 );

-- --
  CREATE TABLE products (
  id int PRIMARY KEY,
  name VARCHAR(10) NOT NULL,
  price int DEFAULT 0,
  status VARCHAR(10),
  created_at datetime
  CONSTRAINT const3 CHECK status='valid' OR status='expired');
  
-- --
  CREATE TABLE orders (
  id int FOREIGN KEY REFERENCES users(id),
  user_id int,
  status VARCHAR(6),
  created_at datetime ,
  CONSTRAINT const2 CHECK status='start' OR status='finish',
  CONSTRAINT const4 DEFAULT GETDATE() created_at);
  
  -- --
  CREATE TABLE users (
  id int PRIMARY KEY,
  full_name VARCHAR(20),
  email VARCHAR(20) unique,
  gender char(1) ,
  date_of_birth VARCHAR(15),
  created_at datetime,
  country_code int FOREIGN KEY REFERENCES countries(code) 
  CONSTRAINT const CHECK gender='F' OR gender='M');
  
-- --
  CREATE TABLE countries (
  code int PRIMARY KEY,
  name VARCHAR(20) unique,
  continent_name VARCHAR(20) NOT NULL);
  
  
-- --

  INSERT INTO order_products
  VALUES (001, 111, 4);
  
  INSERT INTO products
